      "installDir": "C:\\Users\\og\\Desktop",
      "cacheVariables": {
        "FETCHCONTENT_BASE_DIR": "${sourceDir}/external",
        "CMAKE_CXX_STANDARD": "26",
        "CMAKE_CONFIGURATION_TYPES": "Release;Debug",
        "CMAKE_DEFAULT_BUILD_TYPE": "Release",
        "CMAKE_VERBOSE_MAKEFILE": true,
        "AL_EXAMPLES": "ON",
        "INSTALL_AL": "ON"
      }
    },
    {
      "name": "x64",
      "hidden": true,
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "toolset": {
        "value": "host=x64",
        "strategy": "external"
      }
    },
    {
      "name": "x86",
      "hidden": true,
      "architecture": {
        "value": "x86",
        "strategy": "external"
      },
      "toolset": {
        "value": "host=Win32",
        "strategy": "external"
      }
    },
    {
      "name": "windows",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_ASM_MASM_COMPILER": "ml64.exe"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [ "Windows" ]
        }
      }
    },
    {
      "name": "cl",
